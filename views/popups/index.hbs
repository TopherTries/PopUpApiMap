<h1>Popups</h1>
<div class="row">
    {{#each popups}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{!-- todo: editIcon --}}
                </div>
                <div class="card-conent center-align"></div>
                    <h5>{{title}}</h5>
                    <p>{{body}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}">
                        <a href="/popups/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                    <div class="card-action center-align">
                        <a href="/popups/{{_id}}" class="btn grey">Expand</a>
                    </div>
            </div>
        </div>
        
    {{else}}
        <p>No popups to display.</p>
    {{/each}}
    
</div>