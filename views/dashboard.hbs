<head>
  <link rel="stylesheet" href="/css/style.css">
  <script src='https://api.mapbox.com/mapbox-gl-js/v2.3.1/mapbox-gl.js'></script>
  <link href='https://api.mapbox.com/mapbox-gl-js/v2.3.1/mapbox-gl.css' rel='stylesheet' />
</head>
<h6>Popupapi Map</h6>
<h3>Welcome {{name}}</h3>
 <title>My Google Map</title>

{{#if popups}}
    <table class="striped">
        <thead>
            <tr>
                <th>Popup</th>
                <th>Date</th>
                <th>Location</th>
            </tr>
        </thead>
        <tbody>
            {{#each popups}}
                <tr>
                    <td><a href="/popups/{{_id}}">{{title}}</a></td>
                    <td><a href="/popups/{{_id}}">{{hours}}</a></td>
                    <td><a href="/popups/{{_id}}">{{location.formattedAddress}}</a></td>
                    <td>
                        <a href="/popups/edit/{{_id}}" class="btn btn-float">
                            <i class="fas fa-edit"></i>
                        </a>

                        <form action="/popups/{{_id}}" method="POST" id="delete-form">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn red">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not created any popups.</p>
{{/if}}

<body>
  <h1>Search for your popup:</h1>

  <div id='map'></div>
  
  <script>
    mapboxgl.accessToken = 'pk.eyJ1IjoidG9waGVydHJpZXMiLCJhIjoiY2tyZmdwanV2M3plbzJ3cGR0bnZ5Z2I5byJ9.lHOkrdqeSGUjGdPEdoP3Cw';
    const map = new mapboxgl.Map({
    container: 'map',
    center: [-90.071533, 29.951065],
    zoom: 12,
    style: 'mapbox://styles/mapbox/streets-v11'
    })

    // const marker = new mapboxgl.Marker()
    // .setLngLat([-90.1312836, 29.9483644])
    // .setPopup(new mapboxgl.Popup().setHTML("<h1>Hello World!</h1>"))
    // .addTo(map)

    // Fetch popups from API
    async function getPopups(){
    const res = await fetch('/api/v1/popups')
    const data = await res.json()

    const popups = data.data.map(popup => {
      return {
        type: 'Feature',
        geometry: {
          type: 'Point',
          coordinates: [popup.location.coordinates[0], popup.location.coordinates[1]]
        },
        properties: {
          name: popup.title,
          icon: 'shop'
        }
      }
    })

    loadMap(popups)
  }

    // Load map with points
    function loadMap(popups) {
      map.on('load', function () {
    
    // Load an image from an external URL.
    map.loadImage(
    'https://docs.mapbox.com/mapbox-gl-js/assets/cat.png',
    function (error, image) {
    if (error) throw error;
 
    // Add the image to the map style.
    map.addImage('cat', image);
 
    // Add a data source containing one point feature.
    map.addSource('point', {
      'type': 'geojson',
      'data': {
      'type': 'FeatureCollection',
      features: popups
    }
    });
 
    // Add a layer to use the image to represent the data.
    map.addLayer({
      'id': 'points',
      'type': 'symbol',
      'source': 'point', // reference the data source
      'layout': {
      'icon-image': '{icon}-15', // reference the image
      'icon-size': 1.25,
      'text-field': '{name}',
      'text-font': ['Open Sans Semibold', 'Arial Unicode MS Bold'],
      'text-offset': [0, 0.9],
      'text-anchor': 'top'
            }
          });
        }
        );
      });
    }

    getPopups()
  </script>
  
</body>

